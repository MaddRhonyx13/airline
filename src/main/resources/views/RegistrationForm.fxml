<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.airline.controllers.RegistrationController"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
        <VBox alignment="CENTER" spacing="30" style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%); -fx-padding: 50;">
            <VBox alignment="CENTER" spacing="10">
                <Label text="Create New Account"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label text="Join our airline reservation system"
                       style="-fx-font-size: 14px; -fx-text-fill: #e8e8e8;"/>
            </VBox>

            <VBox spacing="20" style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 40; -fx-background-radius: 10;"
                  alignment="CENTER" prefWidth="500">

                <Label text="Create Your Account"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #764ba2;"/>

                <VBox spacing="15" prefWidth="400">
                    <VBox spacing="5">
                        <Label text="Username:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <TextField fx:id="usernameField" promptText="Choose a username"
                                   style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Confirm Password:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password"
                                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Full Names:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <TextField fx:id="fullNameField" promptText="Enter your full name"
                                   style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Email Address:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <TextField fx:id="emailField" promptText="Enter your email"
                                   style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Phone Number:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <TextField fx:id="phoneField" promptText="Enter your phone number"
                                   style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Address:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <TextArea fx:id="addressArea" promptText="Enter your address"
                                  prefRowCount="3" prefWidth="400"
                                  style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5" alignment="CENTER">
                        <ProgressIndicator fx:id="progressIndicator" visible="false" progress="0.0"/>
                        <Label fx:id="statusLabel" style="-fx-text-fill: #2ecc71; -fx-font-weight: bold;"/>
                    </VBox>

                    <HBox spacing="15" alignment="CENTER">
                        <Button text="Register" onAction="#handleRegister"
                                style="-fx-background-color: #764ba2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px 15px; -fx-background-radius: 15;"/>

                        <Button text="Cancel" onAction="#handleCancel"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8px 15px; -fx-background-radius: 15;"/>
                    </HBox>

                    <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0 0 0;">
                        <Label text="Already have an account?" style="-fx-text-fill: #7f8c8d;"/>
                        <Button text="Login here" onAction="#handleLogin"
                                style="-fx-background-color: transparent; -fx-text-fill: #764ba2; -fx-underline: true; -fx-padding: 0;"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
        </ScrollPane>
    </center>


</BorderPane>
