<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.airline.controllers.MainController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">

    <MenuBar>
        <Menu text="File">
            <MenuItem text="Exit" onAction="#handleExit"/>
        </Menu>
        <Menu text="Reservations">
            <MenuItem text="New Reservation" onAction="#showCustomerForm"/>
            <MenuItem text="View All Reservations" onAction="#showAllReservations"/>
            <MenuItem text="Search Reservation" onAction="#showReservationSearch"/>
        </Menu>
        <Menu text="Flights">
            <MenuItem text="Flight Details" onAction="#showFlightManagement"/>
            <MenuItem text="Search Flights" onAction="#showFlightSearch"/>
        </Menu>
        <Menu text="Cancellation">
            <MenuItem text="Cancel Booking" onAction="#showCancellationForm"/>
        </Menu>
        <Menu text="Admin" fx:id="adminMenu">
            <MenuItem text="User Management" onAction="#showUserManagement"/>
            <MenuItem text="System Settings" onAction="#showSystemSettings"/>
        </Menu>
        <Menu text="Help">
            <MenuItem text="About" onAction="#showAbout"/>
        </Menu>
    </MenuBar>

    <HBox spacing="20" style="-fx-padding: 10 20; -fx-background-color: #34495e;" alignment="CENTER_LEFT">
        <VBox>
            <Label fx:id="welcomeLabel" text="Welcome, User!" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="userRoleLabel" text="Role: Guest" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12px;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <Label text="Sky Linear Airline Reservation System"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <Label text="Book your flights with ease and comfort"
           style="-fx-font-size: 18px; -fx-text-fill: #e8e8e8;"/>

    <HBox spacing="20" style="-fx-padding: 30 0 0 0;" alignment="CENTER">
        <Button text="ðŸ›« New Reservation"
                onAction="#showCustomerForm"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 15 25; -fx-font-size: 14px;"
                fx:id="reservationButton"
        />

        <Button text="ðŸ” Search Flights"
                onAction="#showFlightSearch"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 15 25; -fx-font-size: 14px;"
        />

        <Button text="âŒ Cancel Booking"
                onAction="#showCancellationForm"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 15 25; -fx-font-size: 14px;"
        />

        <Button text="âœˆï¸ Manage Flights"
                onAction="#showFlightManagement"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 15 25; -fx-font-size: 14px;"
        />
    </HBox>

    <GridPane style="-fx-padding: 40 0 0 0;" hgap="20" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="200"/>
            <ColumnConstraints prefWidth="200"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Today's Flights: #foundFlights"
               style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 20; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-alignment: center;"
               GridPane.columnIndex="0"
        />

        <Label text="Available Seats: 245"
               style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 20; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-alignment: center;"
               GridPane.columnIndex="1"
        />

        <Label text="Confirmed Bookings: 89"
               style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 20; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-alignment: center;"
               GridPane.columnIndex="2"
        />
    </GridPane>

</VBox>
