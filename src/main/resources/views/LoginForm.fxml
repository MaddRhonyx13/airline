<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.airline.controllers.LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 50;">
            <VBox alignment="CENTER" spacing="10">
                <Label text="Sky Linear Airline Reservation System"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label text="Please login to continue"
                       style="-fx-font-size: 14px; -fx-text-fill: #764ba2;"/>
            </VBox>

            <VBox spacing="20" style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 40; -fx-background-radius: 10;"
                  alignment="CENTER" prefWidth="400">

                <Label text="Login to Your Account"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #764ba2;"/>

                <VBox spacing="15" prefWidth="300">
                    <VBox spacing="5">
                        <Label text="Username:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <TextField fx:id="usernameField" promptText="Enter your username"
                                   style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Password:" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                       style="-fx-padding: 10; -fx-background-radius: 5; -fx-border-radius: 5;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Login As" style="-fx-font-weight: bold; -fx-text-fill: #764ba2;"/>
                        <ComboBox fx:id="roleComboBox"
                                  style="-fx-background-radius: 5; -fx-border-radius: 15;"/>
                    </VBox>

                    <Label fx:id="errorLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"
                           visible="false" managed="false"/>

                    <Button text="Login" onAction="#handleLogin"
                            style="-fx-background-color: #764ba2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5px 15px; -fx-background-radius: 15; -fx-font-size: 14px;"
                            fx:id="loginButton"/>
                    <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10 0 0 0;">
                            <Label text="Don't have an account?" style="-fx-text-fill: #7f8c8d"/>
                            <Button text="Register here" onAction="#handleRegister"
                                     style="-fx-background-color: transparent; -fx-text-fill: #764ba2; -fx-underline: true; -fx-padding: 0;"/>
                    </HBox>
                </VBox>

                <VBox spacing="10" style="-fx-padding: 20 0 0 0;" alignment="CENTER">
                    <Label text="Demo Accounts:" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"/>
                    <VBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="Admin: admin / admin123" style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
                        <Label text="Agent: agent1 / agent123" style="-fx-text-fill: #f39c12; -fx-font-size: 12px;"/>
                        <Label text="Customer: customer1 / customer123" style="-fx-text-fill: #27ae60; -fx-font-size: 12px;"/>
                    </VBox>
                </VBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
